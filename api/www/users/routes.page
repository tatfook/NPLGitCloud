<?npl
include_once("./views.page");

local apis = {
    { "^/users/[^%s]+$", "GET", get_single_user },
    { "^/user$", "GET", get_current_user },
    { "^/user$", "PATCH", update_current_user }
};

function check_users_apis()
    local url = request:url():match("^[^%?]*");
    local method = request:GetMethod();
    for i = 1, #apis do
        if (url:match(apis[i][1]) and (method == apis[i][2])) then
            apis[i][3]();
            return true;
        end
    end
    return false;
end
?>
